import sys
import os

if len(sys.argv) > 3:
    exchangeName=sys.argv[1].lower()
    account=sys.argv[2]
    pair=sys.argv[3].upper()

    fn=exchangeName+'.'+account+'.'+pair.replace("-","").replace("/","")
    fnGrid=fn+'.grid'
    fnStop=fn+'.stop'
    if os.path.exists(fnStop) and not os.path.exists(fnGrid):
        sys.exit(1)

