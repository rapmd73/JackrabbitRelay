#!/bin/bash

# Crontab entry ( without has mark #
# @reboot ( /home/JackrabbitRelay/Base/RelayLauncher & ) > /dev/null 2>&1

BaseDir="/home/Equilibrium"

cd $BaseDir

while true ; do
    $BaseDir/Equilibrium.spot $@
    $BaseDir/CheckStop $@
    if [ $? -eq 1 ] ; then
        exit
    fi
    sleep 60
done


