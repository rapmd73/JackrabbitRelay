import sys
import os

if len(sys.argv) > 3:
    exchangeName=sys.argv[1].lower()
    account=sys.argv[2]
    pair=sys.argv[3].upper()

    fn=exchangeName+'.'+account+'.'+pair.replace("-","").replace("/","")
    fnStop=fn+'.stop'
    fh=open(fnStop,'w')
    fh.write("Stop!\n")
    fh.close()

