import JackrabbitRelay as JRR
import JRRtechnical as jrTA

def main():
    ta=jrTA.TechnicalAnalysis('kraken','MAIN','BTC/USD','1m',5000)
    ohlcv=ta.GetOHLCV()

    Opening=1
    HighIDX=2
    LowIDX=3
    Closing=4
    Volume=5

    for slice in ohlcv:
        # Build the rolling window

        ta.Rolling(slice)

        period=50
        ema1IDX=6      # First EMA
        ema2IDX=7      # Second EMA of first EMA
        ema3IDX=8      # Third EMA of second EMA (TRIX)

        ta.EMA(Closing,period)
        ta.EMA(ema1IDX,period)
        ta.EMA(ema2IDX,period)

        ta.Display(-1)

if __name__=='__main__':
    main()

