import os
import sys
sys.path.append('/home/JackrabbitRelay/Base/Library')
import json
import requests

import JRRconfig
import JRRsupport

idl=""
idf=JRRconfig.ConfigDirectory+'/Identity.cfg'
if os.path.exists(idf):
    cf=open(idf,'rt+')
    try:
        idl=json.loads(cf.readline())
        ident='"Identity":"'+idl['Identity']+'", '
    except:
        print("Reading Configuration",'identity damaged')
        sys.exit(1)
    cf.close()

if len(sys.argv) > 6:
    webhook=sys.argv[1]
    exchangeName=sys.argv[2].lower()
    market=sys.argv[3].lower()
    account=sys.argv[4]
    action=sys.argv[5].lower()
    pair=sys.argv[6].upper()
else:
    print("a webhook, an exchange, a market, a (sub)account, a direction, and an asset must be provided.")
    sys.exit(1)

exc='"Exchange":"'+exchangeName+'", "Market":"'+market+'"'
account='"Account":"'+account+'"'
sym='"Asset":"'+pair+'"'
direction='"Action":"'+action.lower()+'"'

if len(sys.argv) > 7:
    psize='"Base":"'+str(sys.argv[7])+'"'
    payload='{ '+ident+exc+', '+account+', '+direction+', '+sym+', '+psize+' }'
else:
    payload='{ '+ident+exc+', '+account+', '+direction+', '+sym+' }'

headers={'content-type': 'text/plain', 'Connection': 'close'}

resp=None
try:
    resp=requests.post(webhook,headers=headers,data=payload)
    try:
        r=json.loads(resp.text)
        try:
            res=r['message']
        except:
            res=json.dumps(r)
    except:
        res=resp.text
except:
    res=None

if res:
    print(res)
