###
### Main code base.
###

cfiles=os.listdir(JRRconfig.LedgerDirectory)

for cf in cfiles:
    if cf.find('.ledger')>-1:
        en=cf.split('.')[0]
        ac=cf.split('.')[1]

        print("Checking",en,ac)

        cmd=JRRconfig.StatisticsDirectory+'/ChartLedger '+en+' '+ac
        os.system(cmd)
